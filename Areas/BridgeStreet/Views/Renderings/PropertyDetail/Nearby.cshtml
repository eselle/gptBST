@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<BridgeStreet.Website.Domain.Models.Content.Properties.Property>

<div class="nearby-container">

    <h2>Nearby</h2>

    <div class="nearby-list col-xs-12 col-sm-12 col-md-6">
        <div class="row">
            <ul class="nearby-list-items"></ul>
        </div>
    </div>
    <div class="nearby-map-container hidden-xs col-sm-12 col-md-6">
        <div class="row">
            <div id="nearby-map" data-lat="@Model.Latitude" data-lon="@Model.Longitude" data-radius="80" data-zoom="16" data-search-type="restaurant"></div>
        </div>
    </div>
</div>