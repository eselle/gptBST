@using Glass.Mapper.Sc.Web.Mvc

@inherits GlassView<BridgeStreet.Website.Domain.Models.Component.GeneralHero>

@{
    if (Model.HeroImage != null)
    {
        <section class="hero-widget" style="background-image: url('@(Model.HeroImage.Src)')">
            <div class="container-fluid">
                <div class="row row-eq-height">
                    <div class="col-sm-10 col-sm-offset-2 col-xs-12 col-align-bottom">
                        <h2 class="h2">@Editable(Model, i => i.HeroTitle)</h2>
                        <p class="lead">@Editable(Model, i => i.HeroSubtitle)</p>
                    </div>
                </div>
            </div>
        </section>
    }
}
