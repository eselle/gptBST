<?xml version="1.0" encoding="UTF-8" ?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
    @foreach (var node in Model)
    {
        <url>
            <loc>@node.FullUrl</loc>
            <lastmod>@node.LastModified.ToString("yyyy-MM-dd")</lastmod>
            @foreach (var altLangNode in node.AlternateLanguageNodes)
            {
                <xhtml:link rel="alternate" hreflang="@altLangNode.Language" href="@altLangNode.FullUrl" />
            }
        </url>
    }
</urlset>

@using Glass.Mapper.Sc.Web.Mvc
@using BridgeStreet.Website.Domain.Sitemap
@inherits GlassView<IEnumerable<SitemapNode>>
